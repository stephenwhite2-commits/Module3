def main ():
  """
  Calculates the time on a 24-hour clock for a future alarm
  """
  try:
    # Ask for the current time and the numbers of hours to wait
    # The input() function needs to be converted to an integer
    current_time_input = input("What time is it right now in hours, on a 24-hour clock?")
    current_time = int(current_time_input)
    wait_hours_input = input("How many hours do you want to wait?")
    wait_hours = int(wait_hours_imput)
    # Use the modulo operator to wrap around the clock
    alarm_time = (current_time + wait_hours) % 24
    # Display final time
    print(f"The alarm will go off at {alarm_time} o'clock.")
  #provide error message for try
  except ValueError:
    print("Please provide a valid response. Use numbers.")
if __name__ == "__main__":
  main()
    
