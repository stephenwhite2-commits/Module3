START
// State constant for tip and tax rate per critical thinking assignment
SET TIP_RATE = 0.18
SET SALES_TAX_RATE = 0.07
// Ask the user to enter the charge
PROMPT "Enter the charge"
READ food_charge
// Convert input to a number
CONVERT food_charge TO FLOAT
// Calculate amounts
Calculate tip_amount = food_charge * TIP_RATE
Calculate tax_amount = food_charge * SALES_TAX_RATE
// Calculate Total
CALCULATE TOTAL = food_charge + tip_amount + tax_amount
// Display results
DISPLAY "Charge: ", food_charge
DISPLAY "Tip (18%): ", tip_amount
DISPLAY "Sales Tax (7%): ", tax_amount
DISPLAY "Total: ", TOTAL
END

# Constants for tip and tax rate
TIP_RATE = 0.18
SALES_TAX_RATE = 0.07

